## ~/.Renviron points to this file locally

## Set options
options(
    stringsAsFactors = FALSE,
    scipen = 5,
    datatable.print.topn = 10
)

## Load custom code to separate env on search path.
.customEnv <- new.env()
with(.customEnv,  {
paths <- c(
    "utils/common.R",
    "utils/ggplot.R"
)
for(f in paths) source(paste0("~/github/work-tools/R/", f), local = TRUE)
rm(f, paths)
})
attach(.customEnv)
rm(.customEnv)

## Auto-completion for package names.
utils::rc.settings(ipck = TRUE)

## Load other packages.
library(data.table)
library(Hmisc)
library(ggplot2)

